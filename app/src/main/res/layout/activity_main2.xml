<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity2">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"

        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow>

            <TextView
                android:layout_width="120dp"
                android:text="Welcome to our system " />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="180dp"
                android:text="Hello, lets get started to be more carefull about our
                      life by  using BMI Result"
                android:textColor="@color/black"
                android:layout_gravity="center"/>



        </TableRow>

        <TableRow>

            <TextView
                android:text="select your gender :"
                android:layout_width="120dp"
                android:textColor="@color/purple_500"
                android:textSize="10dp" />

            <Spinner
                android:id="@+id/spinnerid"
                android:layout_width="200dp"
                android:entries="@array/gender_type" />


        </TableRow>


        <TableRow>

            <TextView
                android:text="Please enter you Height in cm :"
                android:textColor="@color/black"
                android:layout_width="120dp" />

            <EditText
                android:id="@+id/Heightid"
                android:layout_width="200dp"
                android:text="Height" />
        </TableRow>


        <TableRow>
            <TextView
                android:text="Please enter you Weight in kg :"
                android:textColor="@color/black"
                android:layout_width="120dp"/>

            <EditText
                android:id="@+id/weightid"
                android:layout_width="200dp"
                android:text="weight" />
        </TableRow>

        <TableRow>

            <Button
                android:layout_height="match_parent"
                android:layout_width="10dp"
                android:text="Calculate:"
                android:textColor="@color/black"
                android:onClick="btnbmiOnClick"
                android:textAlignment="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="BMI  :"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:layout_width="20dp"/>

            <EditText
                android:layout_width="200dp"
                android:id="@+id/bmiid"
                android:text="-> "/>
        </TableRow>


    </TableLayout>

</FrameLayout>